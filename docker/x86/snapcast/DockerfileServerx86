FROM ubuntu:latest

ADD https://github.com/badaix/snapcast/releases/download/v0.7.0/snapserver_0.7.0_amd64.deb /

RUN apt-get update                                                         && \
    dpkg -i --force-all snapserver_0.7.0_amd64.deb                         && \
    apt-get -f install -y --no-install-recommends                          && \
    apt-get clean && rm -rf /var/lib/apt/lists/* /tmp/* /var/tmp/*         && \
    rm snapserver_0.7.0_amd64.deb

ENTRYPOINT [ "/usr/sbin/snapserver" ]

EXPOSE 1704
EXPOSE 1705